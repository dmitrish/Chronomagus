<?xml version="1.0" encoding="utf-8"?>
<WatchFace width="454" height="454">
  <Scene>

    <!-- Clean white background -->
    <PartDraw x="0" y="0" width="454" height="454">
      <Ellipse x="0" y="0" width="454" height="454">
        <Fill color="#FFFFFFFF" />
      </Ellipse>
    </PartDraw>

    <!-- Railway minute track (thin outer ring) -->
    <PartDraw x="0" y="0" width="454" height="454">
      <Ellipse x="15" y="15" width="424" height="424">
        <Stroke color="#FFCCCCCC" width="0.5" />
      </Ellipse>
    </PartDraw>

    <!--
    Correct Mathematical positioning based on 12 o'clock reference:
    - Watch face center: (227, 227)
    - Text center for 12 o'clock: (227, 47) - this gives us the radius = 180
    - For numerals: position text boxes so their centers are at the calculated points
    - For dots: position small circles directly at the calculated points
    - Angles in radians: 12=4.71, 1=5.24, 2=5.76, 3=0, 4=0.52, 5=1.05, 6=1.57, 7=2.09, 8=2.62, 9=3.14, 10=3.67, 11=4.19
    -->

    <!-- 12 o'clock - keep original position as reference -->
    <PartText x="207" y="47" width="40" height="30">
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="36" color="#FF2C2C2C">12</Font>
      </Text>
    </PartText>

    <!-- 2 o'clock (60° from 12) - rotated to point toward center -->
    <Group id="12" x="363" y="121" width="49" height="30" angle="55">
      <PartText x="0" y="0" width="40" height="30">
        <Text align="CENTER">
          <Font family="SYNC_TO_DEVICE" size="36" color="#FF2C2C2C">2</Font>
        </Text>
      </PartText>
      <!--<PartText x="363" y="121" width="40" height="30">
      <Transform>
        <Rotate angle="60" pivotX="20" pivotY="15" />
      </Transform>
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="36" color="#FF2C2C2C">2</Font>
      </Text>
    </PartText>-->
    </Group>

    <!-- 4 o'clock (120° from 12) - rotated to point toward center -->
    <PartText x="363" y="301" width="40" height="30">
      <Transform>
        <Rotate angle="120" pivotX="20" pivotY="15" />
      </Transform>
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="36" color="#FF2C2C2C">4</Font>
      </Text>
    </PartText>

    <!-- 8 o'clock (240° from 12) - rotated to point toward center -->
    <PartText x="51" y="301" width="40" height="30">
      <Transform>
        <Rotate angle="240" pivotX="20" pivotY="15" />
      </Transform>
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="36" color="#FF2C2C2C">8</Font>
      </Text>
    </PartText>

    <!-- 10 o'clock (300° from 12) - rotated to point toward center -->
    <PartText x="51" y="121" width="40" height="30">
      <Transform>
        <Rotate angle="300" pivotX="20" pivotY="15" />
      </Transform>
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="36" color="#FF2C2C2C">10</Font>
      </Text>
    </PartText>

    <!-- Simple line markers for remaining hours at radius 180 -->
    <!-- 1 o'clock (30° from 12) -->
    <PartDraw x="314" y="68" width="2" height="1">
      <Rectangle x="0" y="0" width="2" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>
    <PartDraw x="318" y="68" width="6" height="1">
      <Rectangle x="0" y="0" width="6" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>

    <!-- 3 o'clock (90° from 12) -->
    <PartDraw x="405" y="223" width="1" height="2">
      <Rectangle x="0" y="0" width="1" height="2">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>
    <PartDraw x="405" y="227" width="1" height="6">
      <Rectangle x="0" y="0" width="1" height="6">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>

    <!-- 5 o'clock (150° from 12) -->
    <PartDraw x="314" y="382" width="2" height="1">
      <Rectangle x="0" y="0" width="2" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>
    <PartDraw x="318" y="382" width="6" height="1">
      <Rectangle x="0" y="0" width="6" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>

    <!-- 7 o'clock (210° from 12) -->
    <PartDraw x="134" y="382" width="2" height="1">
      <Rectangle x="0" y="0" width="2" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>
    <PartDraw x="138" y="382" width="6" height="1">
      <Rectangle x="0" y="0" width="6" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>

    <!-- 9 o'clock (270° from 12) -->
    <PartDraw x="47" y="223" width="1" height="2">
      <Rectangle x="0" y="0" width="1" height="2">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>
    <PartDraw x="47" y="227" width="1" height="6">
      <Rectangle x="0" y="0" width="1" height="6">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>

    <!-- 11 o'clock (330° from 12) -->
    <PartDraw x="134" y="68" width="2" height="1">
      <Rectangle x="0" y="0" width="2" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>
    <PartDraw x="138" y="68" width="6" height="1">
      <Rectangle x="0" y="0" width="6" height="1">
        <Fill color="#FF2C2C2C" />
      </Rectangle>
    </PartDraw>

    <!-- Brand Text -->
    <PartText x="152" y="90" width="150" height="20">
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="12" color="#FF2C2C2C">CHRONOS</Font>
      </Text>
    </PartText>

    <PartText x="152" y="110" width="150" height="20">
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="9" color="#FF666666">coroutines.com</Font>
      </Text>
    </PartText>

    <!-- Model name below center -->
    <PartText x="152" y="280" width="150" height="20">
      <Text align="CENTER">
        <Font family="SYNC_TO_DEVICE" size="9" color="#FF666666">CHRONOMAGUS</Font>
      </Text>
    </PartText>

    <!-- Subsecond dial at 6 o'clock (smaller and positioned properly) -->
    <PartDraw x="197" y="337" width="60" height="60">
      <Ellipse x="0" y="0" width="60" height="60">
        <Stroke color="#FF999999" width="1" />
        <Fill color="#FFFFFFFF" />
      </Ellipse>
    </PartDraw>

    <!-- Subsecond markers (adjusted for smaller dial) -->
    <PartDraw x="226" y="342" width="2" height="6">
      <Rectangle x="0" y="0" width="2" height="6">
        <Fill color="#FF999999" />
      </Rectangle>
    </PartDraw>

    <PartDraw x="249" y="366" width="6" height="2">
      <Rectangle x="0" y="0" width="6" height="2">
        <Fill color="#FF999999" />
      </Rectangle>
    </PartDraw>

    <PartDraw x="226" y="389" width="2" height="6">
      <Rectangle x="0" y="0" width="2" height="6">
        <Fill color="#FF999999" />
      </Rectangle>
    </PartDraw>

    <PartDraw x="201" y="366" width="6" height="2">
      <Rectangle x="0" y="0" width="6" height="2">
        <Fill color="#FF999999" />
      </Rectangle>
    </PartDraw>

    <!-- Main Clock Hands -->
    <AnalogClock x="0" y="0" width="454" height="454">

      <!-- Hour Hand -->
      <HourHand resource="hour"
                x="222" y="137" width="8" height="90"
                pivotX="0.5" pivotY="1.0"
                tintColor="#FF1E3A8A" />

      <!-- Minute Hand -->
      <MinuteHand resource="minute"
                  x="224" y="92" width="4" height="135"
                  pivotX="0.5" pivotY="1.0"
                  tintColor="#FF1E3A8A" />

    </AnalogClock>

    <!-- Center dot -->
    <PartDraw x="223" y="223" width="8" height="8">
      <Ellipse x="0" y="0" width="8" height="8">
        <Fill color="#FF1E3A8A" />
      </Ellipse>
    </PartDraw>

    <!-- Subsecond hand (adjusted for smaller dial) -->
    <AnalogClock x="197" y="337" width="60" height="60">
      <SecondHand resource="second"
                  x="29" y="10" width="2" height="20"
                  pivotX="0.5" pivotY="1.0"
                  tintColor="#FF1E3A8A">
        <Variant mode="AMBIENT" target="alpha" value="0" />
        <Sweep frequency="1" />
      </SecondHand>
    </AnalogClock>

    <!-- Subsecond center dot (adjusted position) -->
    <PartDraw x="225" y="365" width="4" height="4">
      <Ellipse x="0" y="0" width="4" height="4">
        <Fill color="#FF1E3A8A" />
      </Ellipse>
    </PartDraw>

  </Scene>
</WatchFace>