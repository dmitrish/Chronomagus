<?xml version="1.0" encoding="utf-8"?>
<WatchFace width="454" height="454">
    <Scene>

        <!-- Clean white background -->
        <PartDraw x="0" y="0" width="454" height="454">
            <Ellipse x="0" y="0" width="454" height="454">
                <Fill color="#FFFFFFFF" />
            </Ellipse>
        </PartDraw>

        <!-- Railway minute track (thin outer ring) -->
        <PartDraw x="0" y="0" width="454" height="454">
            <Ellipse x="15" y="15" width="424" height="424">
                <Stroke color="#FFCCCCCC" width="0.5" />
            </Ellipse>
        </PartDraw>

        <!-- 12 o'clock - keep original position as reference -->
        <PartText x="207" y="30" width="40" height="60">
            <Text align="CENTER">
                <Font family="tulpenoneregular" size="60" weight="BLACK" color="#FF2C2C2C">12</Font>
            </Text>
        </PartText>

        <!-- 2 o'clock (60째 from 12) - rotated to point toward center -->
        <Group id="2" x="363" y="121" width="40" height="60" angle="60">
            <PartText x="0" y="0" width="40" height="60">
                <Text align="CENTER">
                    <Font family="tulpenoneregular" size="60" weight="BLACK" color="#FF2C2C2C">2</Font>
                </Text>
            </PartText>
        </Group>

        <!-- 4 o'clock (120째 from 12) - rotated to point toward center -->
        <Group id="4" x="351" y="301" width="40" height="60" angle="120">
            <PartText x="0" y="0" width="40" height="60">
                <Text align="CENTER">
                    <Font family="tulpenoneregular" size="60" weight="BOLD" color="#FF2C2C2C">4</Font>
                </Text>
            </PartText>
        </Group>

        <!-- 8 o'clock (240째 from 12) - rotated to point toward center -->
        <Group id="8" x="62" y="301" width="40" height="60" angle="240">
            <PartText x="0" y="0" width="40" height="60">
                <Text align="CENTER">
                    <Font family="tulpenoneregular" size="60" weight="BOLD" color="#FF2C2C2C">8</Font>
                </Text>
            </PartText>
        </Group>

        <!-- 10 o'clock (300째 from 12) - rotated to point toward center -->
        <Group id="10" x="51" y="121" width="40" height="60" angle="300">
            <PartText x="0" y="0" width="40" height="60">
                <Text align="CENTER">
                    <Font family="tulpenoneregular" size="60" weight="BOLD" color="#FF2C2C2C">10</Font>
                </Text>
            </PartText>
        </Group>

        <!-- Radial line markers for remaining hours (CORRECTED POSITIONS) -->
        <!-- 1 o'clock - small adjustment back toward center from previous overcorrection -->
        <Group id="1" x="335" y="62" width="10" height="3" angle="35">
            <PartDraw x="0" y="0" width="2" height="8">
                <Rectangle x="0" y="0" width="2" height="8">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
            <PartDraw x="0" y="10" width="2" height="16">
                <Rectangle x="0" y="0" width="2" height="16">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
        </Group>

        <!-- 3 o'clock - keep current position -->
        <Group id="3" x="400" y="211" width="10" height="30" angle="90">
            <PartDraw x="0" y="0" width="2" height="8">
                <Rectangle x="0" y="0" width="2" height="8">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
            <PartDraw x="0" y="10" width="2" height="16">
                <Rectangle x="0" y="0" width="2" height="16">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
        </Group>

        <!-- 5 o'clock - small adjustment back toward center from previous overcorrection -->
        <Group id="5" x="300" y="375" width="10" height="30" angle="150">
            <PartDraw x="0" y="0" width="2" height="8">
                <Rectangle x="0" y="0" width="2" height="8">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
            <PartDraw x="0" y="10" width="2" height="16">
                <Rectangle x="0" y="0" width="2" height="16">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
        </Group>

        <!-- 7 o'clock - CORRECT POSITION (reference) -->
        <Group id="7" x="129" y="369" width="10" height="30" angle="210">
            <PartDraw x="0" y="0" width="2" height="8">
                <Rectangle x="0" y="0" width="2" height="8">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
            <PartDraw x="0" y="10" width="2" height="16">
                <Rectangle x="0" y="0" width="2" height="16">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
        </Group>

        <!-- 9 o'clock - keep current position -->
        <Group id="9" x="42" y="211" width="10" height="30" angle="270">
            <PartDraw x="0" y="0" width="2" height="8">
                <Rectangle x="0" y="0" width="2" height="8">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
            <PartDraw x="0" y="10" width="2" height="16">
                <Rectangle x="0" y="0" width="2" height="16">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
        </Group>

        <!-- 11 o'clock - small adjustment back toward center since it's now too close to 12 -->
        <Group id="11" x="130" y="55" width="10" height="30" angle="330">
            <PartDraw x="0" y="0" width="2" height="8">
                <Rectangle x="0" y="0" width="2" height="8">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
            <PartDraw x="0" y="10" width="2" height="16">
                <Rectangle x="0" y="0" width="2" height="16">
                    <Fill color="#FF2C2C2C" />
                </Rectangle>
            </PartDraw>
        </Group>

        <!-- Brand Text -->
        <PartText x="152" y="90" width="150" height="20">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="12" color="#FF2C2C2C">CHRONOS</Font>
            </Text>
        </PartText>

        <PartText x="152" y="110" width="150" height="20">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="9" color="#FF666666">coroutines.com</Font>
            </Text>
        </PartText>

        <!-- Model name below center -->
        <PartText x="152" y="280" width="150" height="20">
            <Text align="CENTER">
                <Font family="SYNC_TO_DEVICE" size="9" color="#FF666666">CHRONOMAGUS</Font>
            </Text>
        </PartText>

        <!-- Subsecond dial at 6 o'clock (smaller and positioned properly) -->
        <PartDraw x="197" y="337" width="60" height="60">
            <Ellipse x="0" y="0" width="60" height="60">
                <Stroke color="#FF999999" width="1" />
                <Fill color="#FFFFFFFF" />
            </Ellipse>
        </PartDraw>

        <!-- Subsecond markers (adjusted for smaller dial) -->
        <PartDraw x="226" y="342" width="2" height="6">
            <Rectangle x="0" y="0" width="2" height="6">
                <Fill color="#FF999999" />
            </Rectangle>
        </PartDraw>

        <PartDraw x="249" y="366" width="6" height="2">
            <Rectangle x="0" y="0" width="6" height="2">
                <Fill color="#FF999999" />
            </Rectangle>
        </PartDraw>

        <PartDraw x="226" y="389" width="2" height="6">
            <Rectangle x="0" y="0" width="2" height="6">
                <Fill color="#FF999999" />
            </Rectangle>
        </PartDraw>

        <PartDraw x="201" y="366" width="6" height="2">
            <Rectangle x="0" y="0" width="6" height="2">
                <Fill color="#FF999999" />
            </Rectangle>
        </PartDraw>

        <!-- Main Clock Hands -->
        <AnalogClock x="0" y="0" width="454" height="454">

            <!-- Hour Hand -->
            <HourHand resource="hour"
                      x="222" y="137" width="8" height="90"
                      pivotX="0.5" pivotY="1.0"
                      tintColor="#FF1E3A8A" />

            <!-- Minute Hand -->
            <MinuteHand resource="minute"
                        x="224" y="92" width="4" height="135"
                        pivotX="0.5" pivotY="1.0"
                        tintColor="#FF1E3A8A" />

        </AnalogClock>

        <!-- Center dot -->
        <PartDraw x="223" y="223" width="8" height="8">
            <Ellipse x="0" y="0" width="8" height="8">
                <Fill color="#FF1E3A8A" />
            </Ellipse>
        </PartDraw>

        <!-- Subsecond hand (adjusted for smaller dial) -->
        <AnalogClock x="197" y="337" width="60" height="60">
            <SecondHand resource="second"
                        x="29" y="10" width="2" height="20"
                        pivotX="0.5" pivotY="1.0"
                        tintColor="#FF1E3A8A">
                <Variant mode="AMBIENT" target="alpha" value="0" />
                <Sweep frequency="1" />
            </SecondHand>
        </AnalogClock>

        <!-- Subsecond center dot (adjusted position) -->
        <PartDraw x="225" y="365" width="4" height="4">
            <Ellipse x="0" y="0" width="4" height="4">
                <Fill color="#FF1E3A8A" />
            </Ellipse>
        </PartDraw>

    </Scene>
</WatchFace>